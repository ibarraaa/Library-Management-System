<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library System</title>
  <style>
    body {
      background-color: #999;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      display: flex;
      padding: 20px;
      gap: 30px;
    }

    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 10px;
    }

    .left, .right {
      flex: 1;
    }

    .header {
      display: flex;
      gap: 20px;
      padding: 10px;
      font-weight: bold;
      justify-content: center;
    }

    input[type="text"] {
      padding: 8px;
      margin: 5px 0;
      width: 90%;
      margin-right: 30px;
      padding-right: 20px;
    }

    .form-group {
      background: #003B8B;
      padding: 10px;
      color: white;
      margin-bottom: 10px;
      margin-right: 34px;
    }

    button {
      padding: 8px 15px;
      background-color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-top: 10px;
    }

    #returnRequests {
      margin-top: 20px;
      background: white;
      padding: 10px;
      width: 92%;
    }
  </style>
</head>
<body>

  <div class="header">
    <span>Borrowers</span>
    <span onclick="showReturnRequests()">Return Requests</span>
    <span>Books</span>
  </div>

  <div class="container">
    <div class="left">
      <h3>available books</h3>
      <table id="booksTable">
        <tr><th>Title</th><th>Book ID</th><th>Author</th><th>Action</th></tr>
      </table>
    </div>

    <div class="right">
      <input type="text" placeholder="Search Title Book" oninput="searchBookByTitle(this.value)">
      <input type="text" placeholder="Search ID book" oninput="searchBookById(this.value)">

      <div class="form">
        <h3>Add book:</h3>
        <div class="form-group">
          Title: <input type="text" id="title">
        </div>
        <div class="form-group">
          Book ID: <input type="text" id="bookId">
        </div>
        <div class="form-group">
          Author: <input type="text" id="author">
        </div>
        <button onclick="addBook()">Add</button>
      </div>

      <div id="returnRequests">
        <h3>Return Requests</h3>
        <ul id="returnList"></ul>
      </div>
    </div>
  </div>

  <script>
    let books = [];
    let returnRequests = [];

    function addBook() {
      const title = document.getElementById('title').value;
      const bookId = document.getElementById('bookId').value;
      const author = document.getElementById('author').value;

      if (title && bookId && author) {
        books.push({ title, bookId, author });
        renderBooks();
      }
    }

    function renderBooks(filterFn) {
      const table = document.getElementById('booksTable');
      table.innerHTML = '<tr><th>Title</th><th>Book ID</th><th>Author</th><th>Action</th></tr>';
      (filterFn ? books.filter(filterFn) : books).forEach((book, index) => {
        const row = table.insertRow();
        row.insertCell(0).textContent = book.title;
        row.insertCell(1).textContent = book.bookId;
        row.insertCell(2).textContent = book.author;

        const actionCell = row.insertCell(3);
        const btn = document.createElement('button');
        btn.textContent = 'Request Return';
        btn.onclick = () => requestReturn(index);
        actionCell.appendChild(btn);
      });
    }

    function requestReturn(index) {
      const book = books[index];
      returnRequests.push(book);
      books.splice(index, 1);
      renderBooks();
      showReturnRequests();
    }
     
    function searchBookByTitle(query) {
      renderBooks(book => book.title.toLowerCase().includes(query.toLowerCase()));
    }
     // to search a book
    function searchBookById(query) {
      renderBooks(book => book.bookId.toLowerCase().includes(query.toLowerCase()));
    }
    // to return a request
    function showReturnRequests() {
      const ul = document.getElementById('returnList');
      ul.innerHTML = '';
      returnRequests.forEach(req => {
        const li = document.createElement('li');
        li.textContent = `${req.bookId} - ${req.title}`;
        ul.appendChild(li);
      });
    }
  </script>
</body>
</html>
      
   
