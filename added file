<body>
  <div class="nav">
    <div>Borrowers</div>
    <div>Return Requests</div>
    <div>Books</div>
  </div>
  <div class="main-container">
    <!-- Books Section -->
    <div class="books-section">
      <div style="text-align: center; font-weight: bold;">available books</div>
      <div class="table" id="bookTable"></div>
      <div style="display: flex; justify-content: center; gap: 10px;">
        <input class="search-bar" placeholder="Search Title Book" onkeyup="searchBookTitle(event)" />
        <input class="search-id-bar" placeholder="Search ID book" onkeyup="searchBookID(event)" />
      </div>
      <div class="form-section">
        <h4>Add book:</h4>
        <label>Title:</label>
        <input class="inp" type="text" id="bookTitle" />
        <label>Book ID:</label>
        <input class="inp" type="text" id="bookID" />
        <label>Author:</label>
        <input class="inp" type="text" id="bookAuthor" />
        <button class="btn" onclick="addBook()">Add</button>
      </div>
    </div>

    <!-- Borrowers Section -->
    <div class="borrowers-section">
      <div style="text-align: center; font-weight: bold;">Borrowers</div>
      <div class="form-section">
        <h4>Add Borrowers:</h4>
        <label>NAME:</label>
        <input type="text" id="borrowerName" />
        <label>STUDENT ID:</label>
        <input type="text" id="studentID" />
        <label>BOOK ID:</label>
        <input type="text" id="borrowedBookID" />
        <label>COURSE:</label>
        <input type="text" id="course" />
        <button class="btn" onclick="addBorrower()">Add</button>
      </div>
      <div class="borrower-list" id="borrowerList"></div>
    </div>
  </div>

  <script>
    const bookList = [];
    const borrowerList = [];

    function renderBookTable(filter = '') {
      const table = document.getElementById("bookTable");
      table.innerHTML = '';
      bookList.filter(b => b.title.includes(filter) || b.id.includes(filter)).forEach(book => {
        table.innerHTML += `
          <div class="cell">${book.title}</div>
          <div class="cell">${book.id}</div>
          <div class="cell">${book.author}</div>`;
      });
    }

    function addBook() {
      const title = document.getElementById("bookTitle").value;
      const id = document.getElementById("bookID").value;
      const author = document.getElementById("bookAuthor").value;
      if (title && id && author) {
        bookList.push({ title, id, author });
        renderBookTable();
      }
    }

    function addBorrower() {
      const name = document.getElementById("borrowerName").value;
      const studentID = document.getElementById("studentID").value;
      const bookID = document.getElementById("borrowedBookID").value;
      const course = document.getElementById("course").value;
      if (name && studentID && bookID && course) {
        borrowerList.push({ name, studentID, bookID, course });
        renderBorrowers();
      }
    }

    function renderBorrowers() {
      const list = document.getElementById("borrowerList");
      list.innerHTML = '';
      borrowerList.forEach(b => {
        const div = document.createElement("div");
        div.className = "borrower-item";
        div.innerText = `Borrower ID: ${b.studentID}  Course: ${b.course}\nName: ${b.name}  Book ID: ${b.bookID}`;
        list.appendChild(div);
      });
    }

    function searchBookTitle(event) {
      const value = event.target.value;
      renderBookTable(value);
    }

    function searchBookID(event) {
      const value = event.target.value;
      renderBookTable(value);
    }
  </script>
</body>
